<launch>
  <!-- Arguments -->
  <arg name="cmd_vel_topic" default="maqui/cmd_vel" />
  <arg name="odom_topic" default="maqui/odom" />
  <arg name="move_forward_only" default="true"/>

  <!-- move_base -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS" />
    <rosparam file="$(find maqui_gazebo)/params/navigation_sim/costmap_common_sim_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find maqui_gazebo)/params/navigation_sim/costmap_common_sim_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find maqui_gazebo)/params/navigation_sim/local_costmap_sim_params.yaml" command="load" />
    <rosparam file="$(find maqui_gazebo)/params/navigation_sim/global_costmap_sim_params.yaml" command="load" />
    <rosparam file="$(find maqui_gazebo)/params/navigation_sim/move_base_sim_params.yaml" command="load" />
    <rosparam file="$(find maqui_gazebo)/params/navigation_sim/dwa_local_planner_sim_params.yaml" command="load" />
    <remap from="cmd_vel" to="$(arg cmd_vel_topic)"/>
    <remap from="odom" to="$(arg odom_topic)"/>
    <param name="DWAPlannerROS/min_vel_x" value="0.0" if="$(arg move_forward_only)" />
  </node>
</launch>